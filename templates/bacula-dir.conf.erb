Director {             
  Name = <%= @fqdn %>
  DIRport = <%= @port %>
  QueryFile = "<%= @query_file %>"
  WorkingDirectory = "<%= @working_directory %>"
  PidDirectory = "<%= @pid_directory %>"
  Maximum Concurrent Jobs = <%= @concurrent_jobs %>
  Password = "<%= @dir_password %>"  # Console password
  Messages = <%= @message %>
}

