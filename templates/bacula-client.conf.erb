# Bacula Director Client Configuration
#   for <%= fqdn %>
#   via <%= director_server -%>:director (<%= director_server -%>)

# Configure the Client which backups
Client {
  Name = "<%= clientname -%>:fd"
  Address = "<%= hostname %>"
  FDPort  = 9102
  Password = "<%= director_password %>"
  AutoPrune = yes
  Maximum Concurrent Jobs = 2
  Catalog = "<%= catalog %>"
}

<% @jobs.each do |job_key, job_value| %>
Job {
    Name = "<%= clientname -%>:<%=job_key-%>"
  <% @job_value.each do |key,value| %>
    <%= key -%> = <%= value -%>
  <% end %>
